%dl.dl-horizontal
  %dt On Call
  %dd
    = f.fields_for :payment_rates, @user.payment_rates.find_by(payment_method_id: 5) || @user.payment_rates.new(payment_method_id: 5) do |payment_rate|
      = payment_rate.hidden_field :payment_method_id, value: 5
      = payment_rate.text_field :price, class: 'form-control numbers_only input-xs', placeholder: "#{number_to_currency(@user.on_call_price.to_f)}"  
