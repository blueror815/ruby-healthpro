= form_for @license_type do |f|
  - if @license_type.errors.any?
    #error_explanation
      .alert.alert-callout.alert-info.no-margin
        %h2= "#{pluralize(@license_type.errors.count, "error")} prohibited this license_type from being saved:"
        %ul
          - @license_type.errors.full_messages.each do |msg|
            %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.hidden_field :job_type_id
  .actions
    = f.submit 'Save'
