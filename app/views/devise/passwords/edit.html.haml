%section.section-account
  .img-backdrop{:style => "background-image: url(#{asset_path 'banner.jpg'})"}
  .spacer
  .card.contain-sm.style-transparent
    .card-body
      .row
        .col-sm-2
        .col-sm-8
          %br/
          %span.text-lg.text-bold.text-primary PROHEALTH LOGIN
          %br/
          %br/
          = form_for(resource, as: resource_name, url: edit_user_password_path(resource_name), :html => {:class => 'form floating-label'}) do |f|
            .form-group
              = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control"
              %label{:for => "username"} New password
            .form-group
              = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
        
              %label{:for => "password"} Confirm new password
              %p.help-block
                %a{:href => "#"} Forgotten?
            %br/
            .row
              .col-xs-6.text-left
                .checkbox.checkbox-styled
                  %label
                    = render "devise/shared/links"

              .col-xs-6.text-right.actions
                = f.submit "Change my password", class:"btn btn-primary btn-raised"
        .col-sm-2