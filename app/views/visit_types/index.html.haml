.row              
  - @visit_types.each do |visit_type|
    .col-md-6.col-lg-4.col-sm-6
      .card
        .alert.alert-callout.alert-info.no-margin
          %strong.text-lg
            %i.fa.fa-clock-o.text-primary
            = visit_type.title.humanize
          %br
            %span.opacity-50
              = link_to 'Edit', edit_visit_type_path(visit_type), class: "pull-right btn ink-reaction btn-raised btn-sm"
              = link_to 'Destroy', 'javascript:void(0)',class: "pull-right btn ink-reaction btn-raised btn-sm swal swal-delete"
              = link_to '', visit_type, :method => :delete, class: "hide"


- content_for :header_title do 
  = @model.pluralize.humanize

- content_for :footer do
  - if current_user.admin?
    .section-floating-action-row
      = form_tag import_bills_path, multipart: true do
        = link_to '', new_visit_type_path, class: 'pull-right btn btn-floating-action ink-reaction btn-info btn-xs fa fa-plus'