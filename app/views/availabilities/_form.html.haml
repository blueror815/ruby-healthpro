= form_for @availability do |f|
  - if @availability.errors.any?
    #error_explanation
      %h2= "#{pluralize(@availability.errors.count, "error")} prohibited this availability from being saved:"
      %ul
        - @availability.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
