/ = render "timesheets/show/shared/billsheet",visits: @pending_visits, hours: (@pending_hours)

= form_tag(update_task_state_path, method: :get, remote:true, id: "update_task") do 
  = hidden_field_tag :id, @timesheet.id
  = hidden_field_tag :state, 'visited'
  = hidden_field_tag :task_type, 'visit'
  - if visits 
    - visits.each do |v|
      = check_box_tag 'task_id[]',  v.id, false, class: "hidden" if submittable?(@timesheet)

- if visits && current_user.job_type.payment_method_ids.include?('1')
  = render "timesheets/show/created/submitter/visits", visits: visits

- if hours && current_user.job_type.payment_method_ids.include?('2')
  = render 'timesheets/show/created/submitter/hours', hours: hours

- if on_calls_line_items && current_user.job_type.payment_method_ids.include?('5')
  = render "timesheets/show/created/submitter/on_call", on_calls_line_items: on_calls_line_items

- if reimbursement_timesheets_line_items && current_user.job_type.payment_method_ids.include?('6')
  = render "timesheets/show/created/submitter/reimbursements", reimbursement_timesheets_line_items: reimbursement_timesheets_line_items

