- hours = @pending_hours + @approved_hours + @rejected_hours
.offcanvas
  - hours.each do |hour|
    .offcanvas-pane.width-12{id: "offcanvas-hour-#{hour.id}-comments"}
      .offcanvas-head.style-primary
        %header= "hour ##{hour.id}"
        .offcanvas-tools 
          %a.btn.btn-icon-toggle.pull-right{ "data-dismiss" => "offcanvas"}
            %i.fa.fa-minus
      .offcanvas-body
        = render "comments/comments_with_form", commentable: hour
