- if form.custom_form.permissions["#{ current_user.role.short_name }"][action_name] == '1'
  - form.custom_form.form_sections.each do |section|
    = render partial: 'custom_forms/form_data/view/section', locals: {section: section, form: form}
- else
  .text-center.text-lg
    You're not authorized to view this form
